{
  "name": "typescript-api-starter",
  "version": "0.1.0",
  "description": "Starter for Node.js express API with Typescript",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:cham11ng/typescript-api-starter.git"
  },
  "author": {
    "name": "Sagar Chamling",
    "email": "sgr.raee@gmail.com"
  },
  "engines": {
    "node": ">= 8.9.4",
    "npm": ">= 5.6.0"
  },
  "scripts": {
    "start:dev": "backpack",
    "start": "node build/main.js",
    "clean": "rimraf build",
    "prepush": "yarn build",
    "precommit": "lint-staged",
    "transpile": "backpack build",
    "build": "run-s clean lint:fix transpile",
    "load:fake": "NODE_ENV=test ts-node scripts/fake-loader",
    "sync:data": "ts-node scripts/sync-data",
    "drop:schema": "ts-node scripts/drop-schema",
    "update:schema": "ts-node scripts/update-schema",
    "test": "jest --config jest.json",
    "lint": "tslint src/**/*.{ts} test/**/*.{ts}",
    "lint:fix": "tslint --fix src/**/*.{ts} test/**/*.{ts} scripts/*.{ts}",
    "prettify": "prettier --single-quote --parser typescript --print-width 120 --write scripts/*.ts src/**/*.{ts} test/**/*.{ts}"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix src/**/*.{ts} test/**/*.{ts} scripts/*.{ts}",
      "prettier --single-quote --parser typescript --print-width 120 --write scripts/*.ts src/**/*.{ts} test/**/*.{ts}",
      "git add"
    ]
  },
  "private": true,
  "license": "MIT",
  "keywords": [
    "api",
    "es6",
    "node",
    "express",
    "javascript",
    "typescript"
  ],
  "dependencies": {
    "@google-cloud/spanner": "^1.4.1",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "bookshelf-camelcase": "^2.0.1",
    "chalk": "^2.3.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "helmet": "^3.10.0",
    "http-status-codes": "^1.3.0",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.2.1",
    "morgan": "^1.9.0",
    "pg": "^7.4.1",
    "uuid": "^3.2.1",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^3.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/faker": "^4.1.2",
    "@types/helmet": "^0.0.37",
    "@types/jest": "^22.2.3",
    "@types/joi": "^13.0.5",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/morgan": "^1.7.35",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.7",
    "backpack-core": "^0.7.0",
    "faker": "^4.1.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.5",
    "ts-loader": "^3.5.0",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.7.0",
    "tslint-consistent-codestyle": "^1.11.1",
    "typescript": "^2.8.3"
  }
}
